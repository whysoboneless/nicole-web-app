# =============================================================================
# Nicole Web Suite - Environment Variables
# Copy this file to .env and fill in your actual values
# =============================================================================

# Flask Configuration
SECRET_KEY=change-this-to-a-random-string-at-least-32-chars
FLASK_ENV=production

# MongoDB - Your MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/niche_research?retryWrites=true&w=majority

# AI APIs
ANTHROPIC_API_KEY=sk-ant-xxxxx
OPENAI_API_KEY=sk-xxxxx

# YouTube API (can have multiple, comma-separated)
YOUTUBE_API_KEY=AIzaxxxxx

# Replicate (for AI video generation)
REPLICATE_API_TOKEN=r8_xxxxx

# ElevenLabs (for voice generation)
ELEVENLABS_API_KEY=xxxxx

# Instagram (for posting)
# Note: Use app passwords or tokens, not your actual password
INSTAGRAM_USERNAME=
INSTAGRAM_PASSWORD=

# Discord OAuth (REQUIRED for login)
# Get these from https://discord.com/developers/applications
DISCORD_CLIENT_ID=your-discord-app-client-id
DISCORD_CLIENT_SECRET=your-discord-app-client-secret
DISCORD_REDIRECT_URI=https://yourdomain.com/auth/discord/callback
OWNER_DISCORD_ID=your-discord-user-id

# Discord Bot (optional - only if using bot features)
DISCORD_BOT_TOKEN=

# Whop (if using payment integration)
WHOP_API_KEY=
WHOP_CLIENT_ID=
WHOP_CLIENT_SECRET=
WHOP_PRODUCT_ID=

# Make.com Webhooks (optional automation)
MAKE_SCRIPT_WEBHOOK=
MAKE_SERIES_ANALYSIS_WEBHOOK=
MAKE_VIDEO_SERIES_WEBHOOK=
MAKE_TITLE_GENERATION_WEBHOOK=
MAKE_PLOT_OUTLINE_WEBHOOK=

# Redis (optional - for caching)
REDIS_URL=redis://localhost:6379

# Flux/HuggingFace (optional - for image generation)
FLUX_API_KEY=
HUGGINGFACE_TOKEN=

# Perplexity AI (optional - for research)
PERPLEXITY_API_KEY=

# Sora API (optional - for video generation)
SORA_API_KEY=

# Google Credentials (for YouTube uploads - path to credentials JSON)
GOOGLE_CREDENTIALS_FILE=
